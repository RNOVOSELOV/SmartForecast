<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="android:windowBackground">@color/grey_100</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme"/>

    <style name="AppTheme.CityPicker" parent="AppTheme"/>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:windowBackground">@color/primary_light</item>
    </style>

    <style name="AppTheme.Settings" parent="AppTheme"/>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
    </style>

</resources>
