<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
                android:padding="8dp" android:background="@color/my_holo">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_city"
        android:text="City" android:textSize="30sp"
        tools:ignore="UnknownIdInLayout"
        android:layout_alignParentTop="true" />
        <!--android:layout_alignParentStart="true"--> <!--/>-->
    <ImageButton
        android:id="@+id/btnCityPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_location_city"
        android:layout_alignTop="@+id/tv_city"
        android:layout_toRightOf="@+id/tv_city"
        android:layout_toEndOf="@+id/tv_city" />
    <TextView android:id="@+id/tv_humidity" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Влажность 93%"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_wind"
        android:layout_alignParentLeft="true" />

    <TextView android:id="@+id/tv_wind" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Ветер Ю 7м/с"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_precipitation"
        android:layout_alignParentLeft="true" />

    <TextView android:id="@+id/tv_temperature" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:layout_gravity="right"
              android:text="1°C" android:textSize="50sp" android:textStyle="bold"
        android:layout_alignTop="@+id/tv_precipitation"
        android:layout_alignRight="@+id/id_update"
        android:layout_alignEnd="@+id/id_update" />
        <!--android:layout_alignParentEnd="true" />-->

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_update"
            android:src="@android:drawable/stat_notify_sync"
        android:layout_below="@+id/tv_temperature"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
        <!--android:layout_alignParentEnd="true" />-->

    <TextView android:id="@+id/tv_precipitation" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:layout_gravity="right"
              android:text="Облачно"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tv_city"
        android:layout_alignParentLeft="true" />

    <TextView android:id="@+id/tv_pressure" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:layout_gravity="right"
              android:text="4°/2° Ощущение -6°"
        android:layout_alignTop="@+id/id_update"
        android:layout_toLeftOf="@+id/id_update"
        android:layout_toStartOf="@+id/id_update" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--:--"
        android:id="@+id/tv_date_time"
        android:layout_below="@+id/tv_pressure"
        android:layout_toLeftOf="@+id/id_update"
        android:layout_toStartOf="@+id/id_update" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_description"
        android:layout_below="@+id/tv_humidity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!--android:layout_toStartOf="@+id/id_update" />-->

</RelativeLayout>